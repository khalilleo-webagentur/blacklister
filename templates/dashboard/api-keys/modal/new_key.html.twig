<div class="modal fade" id="newKeyModal" tabindex="-1" role="dialog" aria-labelledby="newKeyModalTitle"
     aria-hidden="true">

    {% set isAdmin = is_granted('ROLE_SUPER_ADMIN') %}

    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_api_keys_new') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newKeyModalTitle">
                        Add New Key
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <p class="modal-warning">
                        API-Key will be automatically generated. UserAgent, which must be in Headers, must be unique.
                    </p>

                    <div class="form-group">
                        <label for="iO7nM4yT4bG2sO5itt" class="form-label">
                            Name <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="iO7nM4yT4bG2sO5itt" placeholder="Prod API Key"
                               name="name"
                               required>
                    </div>
                    <div class="form-group">
                        <label for="tO7nM4yT4bG2sO5itt" class="form-label">
                            User-Agent <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="tO7nM4yT4bG2sO5itt" placeholder="Awesome-App"
                               name="userAgent"
                               required>
                        <small class="text-secondary">
                            It must be a camel-case and without any special chars.
                        </small>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add new key</button>
                </div>
            </div>
        </form>
    </div>
</div>