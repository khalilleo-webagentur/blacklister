{% extends 'dashboard/layout/base.html.twig' %}

{% block title %} Dashboard API-Keys {% endblock %}

{% block body %}

    <div class="content-wrapper">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-8">
                        <h5 class="m-0 text-dark mt-1">Api Keys overview</h5>
                    </div>
                    <div class="col-4">
                        <div class="breadcrumb float-right">
                            <button class="btn btn-outline-secondary btn-headers mr-1"
                                    data-toggle="modal" data-target="#newKeyModal">
                                <span class="fa fa-plus fa-sm"></span> <span
                                        class="ps-1 md-d-none">Add New Key</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid area-section">

                <div class="row">
                    <div class="col-lg-12">
                        {% include 'dashboard/api-keys/partial/table_content.html.twig' %}
                    </div>
                </div>

            </div>
        </section>
    </div>

    {% include 'dashboard/api-keys/modal/new_key.html.twig' %}

{% endblock %}