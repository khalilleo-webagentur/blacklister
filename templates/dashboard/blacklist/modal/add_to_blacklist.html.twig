<div class="modal fade" id="newItemModal" tabindex="-1" role="dialog" aria-labelledby="newItemModalTitle"
     aria-hidden="true">

    {% set isAdmin = is_granted('ROLE_SUPER_ADMIN') %}

    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_blacklist_new') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newItemModalTitle">
                        Add to Blacklist
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <p class="modal-warning">
                        At least one field must be filled out.
                    </p>

                    <div class="form-group">
                        <label for="iO7nM4yT4bG2sO00">
                            Api-Key <span class="text-danger">*</span>
                        </label>
                        <select class="form-control" name="apiKey" id="iO7nM4yT4bG2sO00" required>
                            <option value="0" selected disabled>Select one</option>
                            {% for apiKey in apiKeys %}
                                <option value="{{ apiKey.id }}">{{ apiKey.userAgent }}</option>
                            {% endfor %}
                        </select>
                        <small class="text-secondary">
                            Blacklist item must belong to an API key.
                        </small>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO5itt" class="form-label">
                                    Username
                                </label>
                                <input type="text" class="form-control" id="iO7nM4yT4bG2sO5itt" placeholder=""
                                       name="username">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="1iO7nM4yT4bG2sO5itt" class="form-label">
                                    E-Mail
                                </label>
                                <input type="text" class="form-control" id="1iO7nM4yT4bG2sO5itt" placeholder=""
                                       name="email">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="2iO7nM4yT4bG2sO5itt" class="form-label">
                            Domain
                        </label>
                        <input type="text" class="form-control" id="2iO7nM4yT4bG2sO5itt" placeholder=""
                               name="domain">
                    </div>
                    <div class="form-group">
                        <label for="3iO7nM4yT4bG2sO5itt" class="form-label">
                            IP-Address
                        </label>
                        <input type="text" class="form-control" id="3iO7nM4yT4bG2sO5itt" placeholder=""
                               name="ip">
                    </div>
                    <div class="form-group">
                        <label for="4iO7nM4yT4bG2sO5itt" class="form-label">
                            URL
                        </label>
                        <input type="text" class="form-control" id="4iO7nM4yT4bG2sO5itt" placeholder=""
                               name="url">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add to Blacklist</button>
                </div>
            </div>
        </form>
    </div>
</div>