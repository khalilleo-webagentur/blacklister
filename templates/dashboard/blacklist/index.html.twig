{% extends 'dashboard/layout/base.html.twig' %}

{% block title %} Dashboard Users {% endblock %}

{% block body %}

    <div class="content-wrapper">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <h5 class="m-0 text-dark mt-1">Blacklist overview</h5>
                    </div>
                    <div class="col-sm-6">
                        <div class="breadcrumb float-right">
                            <button class="btn btn-outline-secondary btn-headers mr-1"
                                    data-toggle="modal" data-target="#newItemModal">
                                <span class="fa fa-plus fa-sm"></span> <span
                                        class="ps-1 md-d-none">Add to Blacklist</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-12">
                        {% include 'dashboard/blacklist/partial/table_content.html.twig' %}
                    </div>
                </div>

                <div class="row">
                    <section class="col-lg-7 connectedSortable"></section>
                    <section class="col-lg-5 connectedSortable"></section>
                </div>
            </div>
        </section>
    </div>

    {% include 'dashboard/blacklist/modal/add_to_blacklist.html.twig' %}

{% endblock %}