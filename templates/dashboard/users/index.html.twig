{% extends 'dashboard/layout/base.html.twig' %}

{% block title %} Dashboard Users overview {% endblock %}

{% block body %}

<div class="content-wrapper">

    {% set isSuperAdmin = is_granted('ROLE_SUPER_ADMIN') %}

    <div class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <h5 class="m-0 text-dark mt-1">{{ isSuperAdmin ? 'Users' : 'User' }} overview</h5>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right"></ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    {% include 'dashboard/users/partial/table_content.html.twig' %}
                </div>
            </div>

            <div class="row">
                <section class="col-lg-7 connectedSortable"></section>
                <section class="col-lg-5 connectedSortable"></section>
            </div>
        </div>
    </section>
</div>

{% endblock %}